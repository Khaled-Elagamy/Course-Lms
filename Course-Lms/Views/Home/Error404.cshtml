@{
    ViewBag.Title = "Page Not Found";
    Layout = null;
}

<style>
    body {
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .error-container {
        text-align: center;
    }

    .error-image {
        max-width: 100%;
        height: auto;
    }

    .error-text {
        font-size: 1.25rem;
        margin-top: 20px;
    }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        margin-top: 10px;
        color: #fff;
        background-color: #337ab7;
        border: none;
        border-radius: 25px;
        cursor: pointer;
        text-decoration: none;
        font-size: 1.25rem;
    }

        .btn:hover {
            background-color: #23527c;
        }
</style>

<div class="error-container">
    <img src="~/svgs/404.svg" alt="404 - Page Not Found" class="error-image" />
    <p class="error-text">We're sorry, the page you requested could not be found. Please go back to the</p><br /> <a href="/" class="btn">Homepage</a>
</div>