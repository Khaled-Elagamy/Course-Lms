@using Course_Lms.ViewModels
@model CompletionViewModel

<div style="display: flex;flex-direction: column;row-gap: 0.5rem;">
	<h1 style="font-size: 1.5rem;line-height: 2rem;font-weight: 500;">
		@Model.h1Text
	</h1>
	<span style="font-size: 0.875rem;line-height: 1.25rem;color: rgb(51 65 85 / 76%)">
		Complete all fields @Model.CompletionText
	</span>
</div>
<div style="display: flex;column-gap: 0.5rem;align-items: center;">
	<button class="btn publish-btn @(!Model.IsCompleted? "disabled" : "")" onclick="handlePublish('@(Model.IsPublished ? "UnPublish" : "Publish")')">
		@if (Model.IsPublished)
		{
			<span>UnPublish</span>
		}
		else
		{
			<span>Publish</span>
		}
	</button>
	<button class="btn btn-dark delete-btn" style="padding-block-end: 1px;padding-block-start: 1px;padding-inline-end: 6px;padding-inline-start:6px;border-radius: 0.375rem;" onclick="handleDelete()">
		<i class="bi bi-trash" style="width: 1rem;height: 1rem;font-size:20px"></i>
	</button>
</div>
<script>
	if ('@Model.IsPublished'== 'True') {
		$('#warningNotification').fadeOut();
	} else {
		$('#warningNotification').fadeIn();
	}
</script>
