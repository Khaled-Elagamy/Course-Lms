@model List<Course_Lms.ViewComponents.NavLink>
<style>
	img {
		max-width: 100%;
		height: auto;
		object-fit: cover;
		transition-duration: 700ms;
		transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
		--transform-scale-x: 1;
		--transform-scale-y: 1;
	}
</style>


<nav class="left-nav-container">
	<div class="d-flex flex-column h-100" style="overflow-y: auto;border-right-width: 1px;background-color: #ffffff;box-shadow: 1px 1px 2px 0 rgba(0, 0, 0, 0.2)">
		<div class="dismiss">
			<i data-lucide="arrow-left"></i>
		</div>
		<div style="padding:1.5rem;border-bottom: 1px solid #444;" >
			<a asp-controller="Courses" asp-action="Index">
				<img height="130" width="130" alt="logo" src="@Url.Content("~/svgs/logoipsum.svg")" />
			</a>
		</div>
		<div class="d-flex flex-column w-100">
			@foreach (var link in Model)
			{
				<div class="d-flex flex-column w-100">
					@{
						var isActive = (link.Controller == ViewContext.RouteData.Values["controller"] as string &&
						link.Action == ViewContext.RouteData.Values["action"] as string);
						<a class="btn leftSide-nav-btn @(isActive ? "activeRoute" : "")" asp-controller="@link.Controller" asp-action="@link.Action">
							<div class="sideBarItem">
								<i style=" color: @(isActive ? "rgb(29 78 216);" : "rgb(100 116 139);")" data-lucide="@(link.Icon)"></i>
								@link.Label
							</div>
							<div class="activeItem" style="@(isActive? "opacity: 1;":"opacity: 0;")"></div>
						</a>
					}
				</div>
			}
		</div>
	</div>
</nav>

