


<script src="https://unpkg.com/dropzone@6.0.0-beta.1/dist/dropzone-min.js"></script>
<link href="https://unpkg.com/dropzone@6.0.0-beta.1/dist/dropzone.css" rel="stylesheet" type="text/css" />
<!-- partial-view.html -->
<style>
	/* Add your custom styles here */
	#video-dropzone {
		border: 2px dashed #ccc;
		background-color: #f9f9f9;
		padding: 20px;
		text-align: center;
	}

		#video-dropzone .upload-icon {
			font-size: 60px;
			margin-bottom: 10px;
			color: #808089;
		}

		#video-dropzone .dz-message {
			font-size: 18px;
			font-weight: 600;
			color: #325ce3;
		}

	#video-container {
		margin-top: 20px;
	}
</style>
<div id="video-dropzone" class="dropzone">
	<div class="dz-message" data-dz-message>
		<i class="bi bi-cloud-arrow-up-fill upload-icon"></i><br /> 
		<span>Choose files or drag and drop</span>
	</div>
</div>


<script>
	
	let chapterId = document.querySelector('.id').value;
	// Initialize Dropzone
	Dropzone.autoDiscover = false; 
	var myDropzone = new Dropzone("#video-dropzone", {
		url: "/Chapters/UploadVideo", 
		paramName: "video",
		maxFiles: 1, 
		acceptedFiles: "video/*",
		dictDefaultMessage: "Drag & Drop video file here or click to upload.",
		init: function () {
			var self = this;
			this.on("sending", function (file, xhr, formData) {
				formData.append("chapterId", chapterId);
				formData.append("uuid", file.upload.uuid);
				var type = file.type.split("/");
				var fileExtension = type[1];
				formData.append("extension", fileExtension);

			});
			this.on("success", function (file, response) {
				$.toast({
					text: response.message,
					position: 'top-center',
					icon: 'success'
				})
				reloadVideoPartial(chapterId, response.filePath)
				self.removeFile(file);
				toggleVideoEditability(false);

			});

			this.on("error", function (file, errorMessage) {
				console.error("Error uploading file:", file, errorMessage);
				self.removeFile(file);
				$.toast({
					text: errorMessage.message,
					position: 'top-center',
					icon: 'error'
				})
			});

		}
	});
</script>


